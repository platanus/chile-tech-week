    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@react-email/components": "^0.4.0",
    "@react-email/render": "^1.1.4",
    "@sentry/nextjs": "^9",
    "@vercel/blob": "^0.24.1",
    "bcrypt-ts": "^5.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "country-data-list": "^1.5.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.34.1",
    "fuse.js": "^7.1.0",
    "geist": "^1.4.2",
    "lucide-react": "^0.446.0",
    "next": "15.5.2",
    "next-auth": "5.0.0-beta.25",
    "next-intl": "^4.3.5",
