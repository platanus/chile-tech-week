    "react-data-grid": "7.0.0-beta.47",
    "react-day-picker": "^9.9.0",
    "react-dom": "19.0.0-rc-45804af1-20241021",
    "react-hook-form": "^7.61.1",
    "resend": "^4.8.0",
    "sonner": "^1.7.4",
    "swr": "^2.3.3",
    "tailwind-merge": "^2.6.0",
    "three": "^0.179.1",
