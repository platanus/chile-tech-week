{
  "name": "chile-tech-week",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "PORT=3000 next dev --turbo 2>&1 | tee .dev-server.log",
    "dev:kill": "pkill -f 'next dev --turbo' && rm -f .dev-server.log || echo 'No dev server running'",
    "dev:logs": "./scripts/dev-logs.sh",
    "dev:main": "dotenvx run -f .env.local -- npx tsx src/lib/dev/main.ts",
    "dev:create-admin-users": "dotenvx run -f .env.local -- npx tsx src/lib/dev/create-admin-users.ts",
    "email:dev": "email dev --port 3001 --dir src/emails",
    "typecheck": "tsc --noEmit",
    "build": "tsx src/lib/db/migrate && next build",
    "start": "next start",
    "lint": "biome check",
    "lint:fix": "biome check --write --unsafe",
    "format": "biome format --write",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "npx tsx src/lib/db/migrate.ts",
    "db:generate:migrate": "pnpm db:generate && pnpm db:migrate",
    "db:reset": "npx tsx src/lib/db/scripts/utils.ts",
    "db:reset:migrate": "pnpm db:reset && pnpm db:migrate",
    "db:docker:start": "docker compose -f docker-compose.dev.yml --env-file .env.local up -d postgres",
    "db:docker:stop": "docker compose -f docker-compose.dev.yml --env-file .env.local down",
    "db:psql": "npx tsx src/lib/db/scripts/psql.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:check": "drizzle-kit check",
    "db:up": "drizzle-kit up",
    "gen-route-types": "npx next-typesafe-url --srcPath .",
    "knip": "knip",
    "knip:fix": "knip --fix"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
